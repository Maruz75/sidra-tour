---
const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
    <div class="container footer-grid">
        <div class="footer-brand">
            <img src="/Sidra Tour.png" alt="Sidra Tour Logo" class="footer-logo-img" />
            <p>Travel Umroh Tanpa Gimik.<br />Fokus Ibadah, Hati Tenang.</p>
        </div>

        <div class="footer-link-group">
            <h3>MENU</h3>
            <ul>
                <li><a href="#beranda">Beranda</a></li>
                <li><a href="#tentang">Kenapa Kami?</a></li>
                <li><a href="#paket">Pilihan Paket</a></li>
            </ul>
        </div>

        <div class="footer-contact">
            <h3>HUBUNGI</h3>
            <p>
                Jl. Pugeran Timur No.40, Suryodiningratan, Kec. Mantrijeron,
                Kota Yogyakarta, Daerah Istimewa Yogyakarta 55141
            </p>
            <p>+62 812 3456 7890</p>
            <div class="socials">
                <a href="#">IG</a>
                <a href="#">FB</a>
                <a href="#">TT</a>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="container bottom-content">
            <p>&copy; {currentYear} Sidra Tour.</p>
            <p class="tagline">#UmrohTanpaGimik</p>
        </div>
    </div>
</footer>

<style>
    .site-footer {
        background: var(--deep-slate);
        color: var(--off-white);
        padding: 6rem 0 0;
        border-top: 5px solid var(--neon-lime);
    }

    .footer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 4rem;
        padding-bottom: 4rem;
    }

    .footer-logo-img {
        max-width: 100px; /* Reduced from 150px */
        height: auto;
        margin-bottom: 1.5rem;
    }

    .footer-brand p {
        font-size: 1.2rem;
        color: #94a3b8;
        font-weight: 500;
    }

    .footer-link-group h3,
    .footer-contact h3 {
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        color: white;
        letter-spacing: 0.1em;
    }

    .footer-link-group ul {
        list-style: none;
        padding: 0;
    }

    .footer-link-group li {
        margin-bottom: 1rem;
    }

    .footer-link-group a {
        text-decoration: none;
        color: #94a3b8;
        font-size: 1.1rem;
        font-weight: 500;
        transition: color 0.2s;
        display: inline-block;
    }

    .footer-link-group a:hover {
        color: var(--neon-lime);
        transform: translateX(5px);
    }

    .footer-contact p {
        color: #94a3b8;
        font-size: 1.1rem;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .socials {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .socials a {
        width: 50px;
        height: 50px;
        background: var(--off-white);
        color: var(--deep-slate);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 900;
        text-decoration: none;
        transition: transform 0.2s;
        border: 2px solid transparent;
    }

    .socials a:hover {
        background: var(--neon-lime);
        transform: scale(1.1) rotate(10deg);
        border-color: var(--deep-slate);
    }

    .footer-bottom {
        border-top: 1px solid #334155;
        padding: 2rem 0;
        background: #020617;
    }

    .bottom-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        color: #64748b;
        font-weight: 600;
    }

    .tagline {
        color: var(--neon-lime);
        opacity: 0.5;
    }

    @media (max-width: 768px) {
        .site-footer {
            padding-top: 4rem;
            text-align: center;
        }

        .footer-grid {
            grid-template-columns: 1fr;
            gap: 3rem;
            padding-bottom: 2rem;
        }

        .footer-brand {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .footer-link-group {
            display: none;
        }

        .footer-brand h2 {
            font-size: 3rem;
        }

        .footer-link-group h3,
        .footer-contact h3 {
            display: inline-block;
            border-bottom: 2px solid var(--neon-lime);
            padding-bottom: 0.5rem;
        }

        .socials {
            justify-content: center;
        }

        .bottom-content {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
            padding-bottom: 60px; /* Extra padding for bottom nav */
        }
    }
</style>
