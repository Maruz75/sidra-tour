			<div class="container">
				<h2 class="section-title gallery-title">
					OUR KHUSYU'<br />ACTIVITY<span class="dot">!</span>
				</h2>
			</div>
			<div class="scroll-container">
				{
					[1, 2, 3, 4, 5, 6].map((i) => (
						<div
							class={`photo-card rotate-${i % 2 === 0 ? "right" : "left"}`}
						>
							<div class="photo-frame">
								<img
									src={`https://placehold.co/400x500/0f172a/FFF?text=Momen+Umroh+${i}`}
									alt={`Dokumentasi Jamaah ${i}`}
									loading="lazy"
								/>
							</div>
							<div class="photo-caption">
								<span>üìç MEKKAH, SAUDI ARABIA</span>
							</div>
							<div class="tape" />
						</div>
					))
				}
			</div>
		</section>

		<!-- Packages (Horizontal Scroll / Stack vibe) -->
		<section id="paket" class="packages">
			<div class="container">
				<h2 class="section-title">
					PILIH<br />PAKETMU<span class="dot">.</span>
				</h2>

				<div class="packages-grid">
					{
						packages.map((pkg, i) => (
							<div
								class={`ticket-card ${pkg.highlight ? "highlight" : ""}`}
							>
								<div class="ticket-left">
									<div class="ticket-stub airline-list">
										<img
											src="/Garuda%20Indonesia.svg"
											alt="Garuda Indonesia"
											class="airline-logo"
											loading="lazy"
										/>
										<img
											src="/Malaysia%20Airlines.svg"
											alt="Malaysia Airlines"
											class="airline-logo"
											loading="lazy"
										/>
										<img
											src="/saudia%20airlines.svg"
											alt="Saudia Airlines"
											class="airline-logo"
											loading="lazy"
										/>
									</div>
									<div class="vertical-label">
										<span>FULL SERVICE AIRLINES ONLY</span>
									</div>
								</div>
								<div class="ticket-content">
									<div class="ticket-header">
										<span class="pkg-type">UMROH TRIP</span>
										<h3>{pkg.title}</h3>
										<div class="pkg-price">{pkg.price}</div>
									</div>
									<div class="ticket-body">
										<div class="features-list">
											{pkg.features.map((f) => (
												<span>‚úì {f}</span>
											))}
										</div>
									</div>
								</div>
								<div class="ticket-right">
									<a
										href="https://wa.me/6281234567890"
										class="btn-book"
									>
										BOOK
									</a>
								</div>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<!-- Contact Section (Merged) -->
		<section id="kontak" class="office-visit">
			<div class="container office-content">
				<!-- CTA Part -->
				<div class="cta-merged">
					<h2>BERANGKAAAT!</h2>
					<a href="https://wa.me/6281234567890" class="btn-whatsapp"
						>WHATSAPP KAMI SEKARANG</a
					>
				</div>

				<!-- Office Part -->
				<div class="office-row">
					<div class="office-text">
						<h2>LEBIH SUKA<br />NGOBROL LANGSUNG?</h2>
						<p>Yuk mampir ke kantor kami. Let's Have a Chat!</p>
						<a
							href="https://maps.google.com/?q=Sidra+Tour"
							target="_blank"
							class="btn-maps"
						>
							üìç LIHAT LOKASI DI MAPS
						</a>
					</div>
					<div class="office-decor">
						<img src="/cs-team.png" alt="Tim CS Sidra Tour" />
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />

	<!-- Floating WhatsApp Button -->
	<a
		href="https://wa.me/6281234567890"
		class="floating-wa"
		target="_blank"
		aria-label="Chat WhatsApp"
	>
		<img
			src="https://upload.wikimedia.org/wikipedia/commons/6/6b/WhatsApp.svg"
			alt="WhatsApp"
		/>
	</a>
</Layout>

<style>
	/* VARIABLES */
	/* VARIABLES */
	/* VARIABLES inherited from Layout */
	/* VARIABLES inherited from Layout */

	/* GLOBAL UTILS */
	main {
		width: 100%;
		max-width: 100%;
		overflow-x: hidden;
		display: flex;
		flex-direction: column;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	/* MARQUEE */
	.marquee-container {
		background: var(--neon-lime);
		color: var(--deep-slate);
		overflow: hidden;
		width: 100%;
		max-width: 100%;
		padding: 0.75rem 0;
		font-weight: 900;
		font-size: 1.2rem;
		letter-spacing: 2px;
		border-bottom: 3px solid var(--deep-slate);
		position: sticky;
		top: 0;
		z-index: 90;
		display: flex; /* Flex container */
	}

	.marquee-track {
		display: flex;
		width: fit-content;
		animation: marquee 20s linear infinite;
	}

	.marquee-content {
		flex-shrink: 0;
		white-space: nowrap;
		padding-right: 2rem; /* Gap between contents */
	}

	.marquee-content span {
		display: inline-block;
	}

	@keyframes marquee {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(
				-50%
			); /* Move half of track (one content width) */
		}
	}

	@media (max-width: 768px) {
		.marquee-container {
			position: relative; /* Disable sticky on mobile to prevent misalignment */
			top: auto;
			z-index: 1;
		}
	}

	/* HERO */
	.hero {
		min-height: 85vh;
		display: flex;
		align-items: center;
		background:
			radial-gradient(
				circle at 50% 50%,
				rgba(204, 243, 129, 0.15) 0%,
				transparent 60%
			),
			var(--off-white); /* Subtle glow center */
		padding-top: 4rem;
		position: relative;
		/* overflow: hidden; REMOVED to prevent clipping issues */
		padding-bottom: 4rem; /* Add padding bottom to separate from next section */
	}

	.sticker-wrapper {
		position: absolute;
		top: 5%; /* Moved up */
		right: 5%; /* Moved right */
		transform: rotate(15deg);
		z-index: 10;
	}

	.sticker {
		background: var(--electric-blue);
		color: white;
		padding: 1rem 2rem;
		border-radius: 50%;
		font-weight: 900;
		box-shadow: 8px 8px 0px var(--deep-slate);
		animation: float 3s ease-in-out infinite;
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	.mega-title {
		font-size: clamp(
			2.5rem,
			9vw,
			6.5rem
		); /* Reduced max size & scaling rate */
		line-height: 0.9;
		font-weight: 900;
		color: var(--deep-slate);
		letter-spacing: 0.01em; /* Increased from -0.04em to prevent overlap */
		text-align: center;
		margin-bottom: 2rem;
	}

	.hero-content {
		text-align: center;
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	/* .badge CSS removed */

	.outline-text {
		color: var(--off-white);
		/* Simulated stroke using text-shadow to fix font overlap artifacts */
		text-shadow:
			3px 0 0 var(--deep-slate),
			-3px 0 0 var(--deep-slate),
			0 3px 0 var(--deep-slate),
			0 -3px 0 var(--deep-slate),
			2px 2px 0 var(--deep-slate),
			-2px -2px 0 var(--deep-slate),
			2px -2px 0 var(--deep-slate),
			-2px 2px 0 var(--deep-slate),
			6px 6px 0px var(--neon-lime); /* Pop shadow */
		letter-spacing: 0.08em;
	}

	@media (min-width: 768px) {
		/* .outline-text stroke media query removed */
	}

	.hero-footer-grid {
		margin-top: 3rem;
		border-top: 3px solid var(--deep-slate);
		padding-top: 2rem;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		width: 100%;
		max-width: 900px;
		margin-left: auto;
		margin-right: auto;
	}

	.footer-item {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		text-align: left;
	}

	.footer-item .icon {
		font-size: 1.5rem;
	}

	.footer-item {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		text-align: left;
	}

	.footer-item .icon {
		font-size: 1.5rem;
	}

	.footer-item p {
		margin: 0;
		font-weight: 600;
		line-height: 1.4;
		color: var(--deep-slate);
	}

	/* .btn-hero styles removed */

	.btn-primary {
		background: var(--deep-slate);
		color: var(--neon-lime);
		padding: 1rem 2.5rem;
		font-size: 1.25rem;
		font-weight: 700;
		border: none;
		cursor: pointer;
		transition: transform 0.2s;
		display: inline-block;
		border-radius: 0.5rem;
	}

	.btn-primary:hover {
		transform: scale(1.05);
		background: var(--electric-blue);
		color: white;
	}

	/* FEATURES BENTO */
	.features {
		padding: 4rem 0; /* Reduced from 6rem */
		background: white;
	}

	.bento-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}

	.bento-item {
		background: white;
		border: 3px solid var(--deep-slate);
		padding: 2rem;
		border-radius: 1rem;
		box-shadow: 6px 6px 0px var(--deep-slate);
		transition: transform 0.2s;
	}

	.bento-item:hover {
		transform: translate(-3px, -3px);
		box-shadow: 9px 9px 0px var(--deep-slate);
	}

	.title-card {
		background: transparent !important;
		color: var(--deep-slate);
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 250px;
		border: none !important;
		box-shadow: none !important;
	}

	@media (min-width: 768px) {
		.bento-grid {
			grid-template-columns: repeat(12, 1fr);
		}
		.title-card {
			grid-column: span 3;
		}
		.feature-0 {
			grid-column: span 3;
		}
		.feature-1 {
			grid-column: span 3;
		}
		.feature-2 {
			grid-column: span 3;
		}
	}

	.title-card h2 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		line-height: 0.9;
		font-weight: 900;
		margin: 0;
		text-align: center;
		color: var(--deep-slate);
	}

	.feature-0 {
		background: var(--neon-lime);
	}
	.feature-0 h3 {
		color: var(--deep-slate);
	}

	.feature-1 {
		background: #fff;
	}
	.feature-2 {
		background: #feb2b2;
	} /* Soft red highlight */

	.bento-item h3 {
		font-size: 1.35rem; /* Further reduced to strictly fit 'PERLENGKAPAN' */
		font-weight: 800;
		margin: 1rem 0;
		line-height: 1.25;
		color: var(--deep-slate);
	}

	.bento-item p {
		font-weight: 500;
		font-size: 1.1rem;
		color: var(--deep-slate);
	}

	.icon-box {
		font-size: 3rem;
		margin-bottom: 2rem; /* Added spacing between icon and title */
	}

	/* PACKAGES TICKET STYLE */
	.packages {
		background: var(--deep-slate);
		color: var(--off-white);
		padding: 4rem 0; /* Already 4rem, keeping consistent */
		overflow: hidden;
	}

	.section-title {
		font-size: clamp(2.5rem, 5vw, 4rem); /* Reduced max from 5rem */
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 3rem;
		color: white;
	}

	.dot {
		color: var(--neon-lime);
	}

	.packages-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		max-width: 1200px; /* Increased width */
		margin: 0 auto;
	}

	@media (min-width: 900px) {
		.packages-grid {
			grid-template-columns: 1fr 1fr;
		}
	}

	.ticket-card {
		display: flex;
		background: #fff;
		border: 3px solid var(--deep-slate);
		border-radius: 1rem;
		overflow: hidden;
		box-shadow: 8px 8px 0px var(--neon-lime);
		transition: transform 0.2s;
		position: relative;
		min-height: 250px; /* Taller for information */
	}

	.ticket-left {
		flex: 0 0 120px; /* Increased to fit text + logos */
		display: flex;
		padding: 0;
		position: relative;
		border-right: 2px dashed var(--deep-slate);
	}

	.ticket-left::after,
	.ticket-left::before {
		content: "";
		position: absolute;
		right: -10px; /* Adjusted hole position */
		width: 20px; /* Smaller holes */
		height: 20px;
		background: var(--deep-slate);
		border-radius: 50%;
		z-index: 10;
	}
	.ticket-left::before {
		top: -10px;
	}
	.ticket-left::after {
		bottom: -10px;
	}

	.ticket-stub {
		background: var(--deep-slate);
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.vertical-label {
		writing-mode: vertical-rl;
		transform: rotate(180deg);
		font-size: 0.65rem;
		font-weight: 800;
		color: rgba(0, 0, 0, 0.3); /* Subtle dark on light bg */
		letter-spacing: 0.1em;
		padding: 1rem 0;
		border-left: 1px dashed var(--deep-slate);
		margin-left: 0.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.airline-list {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 0.75rem; /* Space between logos */
		padding: 1rem 0;
		height: 100%;
		flex: 1;
