import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

const packages = [
	{
		title: "REGULER",
		duration: "9 Hari",
		hotel: "Bintang 4",
		features: [
			"Direct Flight",
			"Hotel Dekat Masjid",
			"Makan 3x Sehari",
			"City Tour",
			"Muthawif Pro",
		],
		highlight: false,
	},
	{
		title: "VIP CLASS",
		duration: "9 Hari",
		hotel: "Bintang 5",
		features: [
			"Direct Saudi/Garuda",
			"Hotel Depan Pelataran",
			"Menu Indonesia",
			"Private Bus",
			"Upgrade Kamar",
		],
		highlight: true,
	},
	{
		title: "RAMADHAN",
		duration: "12 Hari",
		hotel: "Bintang 5",
		features: [
			"Full Ramadhan",
			"Tarawih Masjidil Haram",
			"Fullboard Hotel",
			"Pembimbing Khusus",
		],
		highlight: false,
	},
];

const features = [
	{
		icon: "üö´",
		title: "NO DRAMA",
		desc: "Nggak ada city tour yang ga penting. Kita fokus ibadah, bukan shopping.",
	},
	{
		icon: "üíª",
		title: "MANASIK ONLINE",
		desc: "Manasik online, nggak usah di hotel mahal! Lebih efisien, hemat biaya, dan fokus pada materi ilmu.",
	},
	{
		icon: "üí∏",
		title: "FIX PRICE",
		desc: "Harga awal = Harga akhir. Ga ada biaya siluman 'handling' atau 'seragam' dadakan.",
	},
];
---

<Layout
	title="Sidra Tour - Travel Umroh Tanpa Gimik"
	description="Nikmati perjalanan ibadah Umroh yang khusyuk, nyaman, dan transparan bersama Sidra Tour."
>
	<Navbar />

	<main>
		<!-- Marquee Banner -->
		<div class="marquee-container">
			<div class="marquee-content">
				<span
					>NO GIMMICKS ‚Ä¢ JUST IBADAH ‚Ä¢ SIDRA TOUR ‚Ä¢ 100% TRANSPARAN ‚Ä¢
					NO GIMMICKS ‚Ä¢ JUST IBADAH ‚Ä¢ SIDRA TOUR ‚Ä¢ 100% TRANSPARAN ‚Ä¢
					NO GIMMICKS ‚Ä¢ JUST IBADAH ‚Ä¢ SIDRA TOUR ‚Ä¢ 100% TRANSPARAN ‚Ä¢
					NO GIMMICKS ‚Ä¢ JUST IBADAH ‚Ä¢ SIDRA TOUR ‚Ä¢ 100% TRANSPARAN ‚Ä¢</span
				>
			</div>
		</div>

		<!-- Hero Section -->
		<section id="beranda" class="hero">
			<div class="container hero-content">
				<div class="sticker-wrapper">
					<div class="sticker">‚òÖ #UmrohTanpaGimik</div>
				</div>
				<h1 class="mega-title">
					IBADAH<br />
					<span class="outline-text">FOKUS</span><br />
					ONLY.
				</h1>
				<div class="hero-footer">
					<p>
						Fokuskan hati untuk beribadah. Biarkan kami urus
						sisanya. Transparan. Amanah. Sat Set.
					</p>
					<div class="hero-actions">
						<a href="#paket" class="btn btn-primary"
							>LIHAT PAKET ‚ûú</a
						>
					</div>
				</div>
			</div>
		</section>

		<!-- Problem Section (The "Pain") -->
		<section class="problem-section">
			<div class="container">
				<h2 class="section-title problem-title">
					NIAT IBADAH<br /><span class="text-red"
						>MALAH JALAN-JALAN?</span
					>
				</h2>
				<div class="problem-grid">
					<div class="problem-card">
						<div class="icon">üõçÔ∏è</div>
						<h3>KEBANYAKAN SHOPPING</h3>
						<p>
							Niat hati mau khusyuk, malah diajak keliling toko
							oleh-oleh seharian. Capek di jalan, waktu ibadah
							habis.
						</p>
					</div>
					<div class="problem-card">
						<div class="icon">üê™</div>
						<h3>CITY TOUR GA PENTING</h3>
						<p>
							Ke peternakan unta, ke museum ini itu. Padahal hati
							cuma ingin tenang itikaf di Masjidil Haram & Nabawi.
						</p>
					</div>
					<div class="problem-card">
						<div class="icon">üèÉ</div>
						<h3>SHOLAT KETETERAN</h3>
						<p>
							Sering telat ke masjid gara-gara macet pas city tour
							yang sebenernya ga wajib. Sayang banget waktunya.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Bento Grid (The "Solution") -->
		<section id="tentang" class="features">
			<div class="section-divider">
				<span>TAPI TENANG. INI SOLUSINYA.</span>
			</div>
			<div class="container">
				<div class="bento-grid">
					<div class="bento-item title-card">
						<h2>GA PERLU<br />GIMIK.</h2>
					</div>
					{
						features.map((feature, index) => (
							<div class={`bento-item feature-${index}`}>
								<div class="icon-box">{feature.icon}</div>
								<h3>{feature.title}</h3>
								<p>{feature.desc}</p>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<!-- Packages (Horizontal Scroll / Stack vibe) -->
		<section id="paket" class="packages">
			<div class="container">
				<h2 class="section-title">
					PILIH<span class="dot">.</span><br />PAKET<span class="dot"
						>.</span
					>
				</h2>

				<div class="packages-stack">
					{
						packages.map((pkg, i) => (
							<div
								class={`ticket-card ${pkg.highlight ? "highlight" : ""}`}
							>
								<div class="ticket-left">
									<div class="ticket-stub">
										<span class="vertical-text">SIDRA</span>
									</div>
								</div>
								<div class="ticket-content">
									<div class="ticket-header">
										<span class="pkg-type">UMROH TRIP</span>
										<h3>{pkg.title}</h3>
									</div>
									<div class="ticket-body">
										<div class="info-row">
											<span class="label">DURASI</span>
											<span class="value">
												{pkg.duration}
											</span>
										</div>
										<div class="info-row">
											<span class="label">HOTEL</span>
											<span class="value">
												{pkg.hotel}
											</span>
										</div>
										<div class="features-list">
											{pkg.features
												.slice(0, 3)
												.map((f) => (
													<span>‚Ä¢ {f}</span>
												))}
										</div>
									</div>
								</div>
								<div class="ticket-right">
									<a
										href="https://wa.me/6281234567890"
										class="btn-book"
									>
										BOOK NOW
									</a>
								</div>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<!-- Office Visit CTA -->
		<section class="office-visit">
			<div class="container office-content">
				<div class="office-text">
					<h2>LEBIH SUKA<br />NGOBROL LANGSUNG?</h2>
					<p>
						Yuk mampir ke kantor kami! Ngopi-ngopi santai sambil
						konsultasi rencana ibadahmu. Tanpa kaku-kaku club.
					</p>
					<a
						href="https://maps.google.com/?q=Sidra+Tour"
						target="_blank"
						class="btn-maps"
					>
						üìç LIHAT LOKASI DI MAPS
					</a>
				</div>
				<div class="office-decor">üè¢</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section id="kontak" class="cta">
			<div class="cta-inner">
				<h2>BERANGKAT?</h2>
				<a href="https://wa.me/6281234567890" class="btn-whatsapp"
					>WHATSAPP KAMI SEKARANG</a
				>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<style>
	/* VARIABLES */
	/* VARIABLES inherited from Layout */

	/* GLOBAL UTILS */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	/* MARQUEE */
	.marquee-container {
		background: var(--neon-lime);
		color: var(--deep-slate);
		overflow: hidden;
		padding: 0.75rem 0;
		font-weight: 900;
		font-size: 1.2rem;
		letter-spacing: 2px;
		border-bottom: 3px solid var(--deep-slate);
		position: sticky;
		top: 0; /* sticky top below nav if needed, or stick nav above */
		z-index: 90;
		white-space: nowrap;
	}

	.marquee-content {
		display: inline-block;
		white-space: nowrap;
		animation: marquee 50s linear infinite;
		padding-left: 100%; /* Start from outside */
		max-width: 100%; /* CRITICAL: Prevent forcing parent width */
	}

	.marquee-content span {
		margin-right: 2rem;
		display: inline-block;
	}

	@keyframes marquee {
		0% {
			transform: translate(0, 0);
		}
		100% {
			transform: translate(-100%, 0);
		}
	}

	/* HERO */
	.hero {
		min-height: 85vh;
		display: flex;
		align-items: center;
		background: var(--off-white);
		padding-top: 4rem;
		position: relative;
	}

	.sticker-wrapper {
		position: absolute;
		top: 10%;
		right: 10%;
		transform: rotate(15deg);
		z-index: 10;
	}

	.sticker {
		background: var(--electric-blue);
		color: white;
		padding: 1rem 2rem;
		border-radius: 50%;
		font-weight: 900;
		box-shadow: 8px 8px 0px var(--deep-slate);
		animation: float 3s ease-in-out infinite;
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	.mega-title {
		font-size: clamp(4rem, 12vw, 9rem);
		line-height: 0.9;
		font-weight: 900;
		color: var(--deep-slate);
		letter-spacing: -0.04em;
		text-align: center;
		margin-bottom: 2rem;
	}

	.outline-text {
		color: var(
			--off-white
		); /* Filled instead of transparent for better legibility */
		-webkit-text-stroke: 3px var(--deep-slate);
		text-shadow: 4px 4px 0px var(--neon-lime); /* Add pop */
	}

	@media (min-width: 768px) {
		.outline-text {
			-webkit-text-stroke: 4px var(--deep-slate);
		}
	}

	.hero-footer {
		margin-top: 3rem;
		border-top: 3px solid var(--deep-slate);
		padding-top: 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 2rem;
		max-width: 1000px;
		margin-left: auto;
		margin-right: auto;
	}

	.hero-footer p {
		font-size: 1.25rem;
		max-width: 400px;
		font-weight: 600;
		color: var(--deep-slate);
		text-align: left;
		margin: 0;
	}

	.btn-primary {
		background: var(--deep-slate);
		color: var(--neon-lime);
		padding: 1rem 2.5rem;
		font-size: 1.25rem;
		font-weight: 700;
		border: none;
		cursor: pointer;
		transition: transform 0.2s;
		display: inline-block;
		border-radius: 0.5rem;
	}

	.btn-primary:hover {
		transform: scale(1.05);
		background: var(--electric-blue);
		color: white;
	}

	/* FEATURES BENTO */
	.features {
		padding: 6rem 0;
		background: white;
	}

	.bento-grid {
		display: grid;
		grid-template-columns: 1fr;
		gap: 1.5rem;
	}

	.bento-item {
		background: white;
		border: 3px solid var(--deep-slate);
		padding: 2rem;
		border-radius: 1rem;
		box-shadow: 6px 6px 0px var(--deep-slate);
		transition: transform 0.2s;
	}

	.bento-item:hover {
		transform: translate(-3px, -3px);
		box-shadow: 9px 9px 0px var(--deep-slate);
	}

	.title-card {
		grid-column: span 12;
		background: var(--electric-blue);
		color: white;
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 250px;
	}

	@media (min-width: 768px) {
		.bento-grid {
			grid-template-columns: repeat(12, 1fr);
		}
		.title-card {
			grid-column: span 3;
		}
		.feature-0 {
			grid-column: span 3;
		}
		.feature-1 {
			grid-column: span 3;
		}
		.feature-2 {
			grid-column: span 3;
		}
	}

	.title-card h2 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		line-height: 0.9;
		font-weight: 900;
		margin: 0;
		text-align: center;
		color: white; /* Force white color */
	}

	.feature-0 {
		background: var(--neon-lime);
	}
	.feature-0 h3 {
		color: var(--deep-slate);
	}

	.feature-1 {
		background: #fff;
	}
	.feature-2 {
		background: #feb2b2;
	} /* Soft red highlight */

	.bento-item h3 {
		font-size: 2rem;
		font-weight: 800;
		margin: 1rem 0;
		line-height: 1;
		color: var(--deep-slate);
	}

	.bento-item p {
		font-weight: 500;
		font-size: 1.1rem;
		color: var(--deep-slate);
	}

	.icon-box {
		font-size: 3rem;
	}

	/* PACKAGES TICKET STYLE */
	.packages {
		background: var(--deep-slate);
		color: var(--off-white);
		padding: 4rem 0; /* Reduced padding */
		overflow: hidden;
	}

	.section-title {
		font-size: clamp(2.5rem, 6vw, 5rem); /* Reduced max size */
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 3rem;
		color: white;
	}

	.dot {
		color: var(--neon-lime);
	}

	.packages-stack {
		display: flex;
		flex-direction: column;
		gap: 1.5rem; /* Reduced gap */
	}

	.ticket-card {
		display: flex;
		background: var(--off-white);
		color: var(--deep-slate);
		border-radius: 0.75rem; /* Slightly smaller radius */
		overflow: hidden;
		min-height: 160px; /* Reduced height */
		position: relative;
	}

	.ticket-left {
		flex: 0 0 60px; /* Reduced width */
		display: flex;
		padding: 0;
		position: relative;
		border-right: 2px dashed var(--deep-slate);
	}

	.ticket-left::after,
	.ticket-left::before {
		content: "";
		position: absolute;
		right: -10px; /* Adjusted hole position */
		width: 20px; /* Smaller holes */
		height: 20px;
		background: var(--deep-slate);
		border-radius: 50%;
		z-index: 10;
	}
	.ticket-left::before {
		top: -10px;
	}
	.ticket-left::after {
		bottom: -10px;
	}

	.ticket-stub {
		background: var(--deep-slate);
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.vertical-text {
		writing-mode: vertical-rl;
		transform: rotate(180deg);
		color: var(--neon-lime);
		font-weight: 900;
		letter-spacing: 0.15rem;
		font-size: 1rem; /* Smaller font */
		white-space: nowrap;
		padding: 1rem 0;
	}

	.ticket-content {
		padding: 1.25rem 1.5rem; /* Reduced padding */
		flex: 1;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}

	.pkg-type {
		font-weight: 700;
		color: #64748b;
		letter-spacing: 0.1em;
		font-size: 0.8rem;
		display: block;
		margin-bottom: 0.25rem;
	}

	.ticket-content h3 {
		font-size: clamp(1.5rem, 3vw, 2.25rem); /* Reduced title size */
		font-weight: 900;
		margin: 0 0 1rem 0;
		line-height: 1;
	}

	.ticket-body {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
	}

	.info-row {
		display: flex;
		flex-direction: column;
	}

	.label {
		font-size: 0.65rem;
		font-weight: 700;
		color: #64748b;
		letter-spacing: 0.1em;
	}

	.value {
		font-weight: 800;
		font-size: 1rem; /* Smaller value */
	}

	.features-list {
		display: flex;
		gap: 0.5rem;
		font-weight: 600;
		align-items: center;
		flex-wrap: wrap;
	}

	.features-list span {
		background: #e2e8f0;
		padding: 0.2rem 0.6rem;
		border-radius: 4px;
		font-size: 0.8rem;
	}

	.ticket-right {
		width: 140px; /* Reduced button area width */
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--neon-lime);
		padding: 1rem;
		cursor: pointer;
		transition: background 0.2s;
	}

	.ticket-right:hover {
		background: #bef264;
	}

	.btn-book {
		font-weight: 900;
		font-size: 1.25rem; /* Smaller button text */
		text-align: center;
		color: var(--deep-slate);
		text-decoration: none;
		transform: rotate(-5deg);
		transition: transform 0.2s;
		display: block;
		line-height: 1;
	}

	.ticket-card:hover .btn-book {
		transform: rotate(0) scale(1.1);
	}

	.highlight .ticket-right {
		background: var(--electric-blue);
	}
	.highlight .btn-book {
		color: white;
	}

	@media (max-width: 768px) {
		.ticket-card {
			flex-direction: column;
		}
		.ticket-left {
			flex: 0 0 auto;
			min-height: 60px;
			border-right: none;
			border-bottom: 3px dashed var(--deep-slate);
			width: 100%;
		}
		.ticket-left::after,
		.ticket-left::before {
			display: none;
		} /* Simplify for mobile for now or adjust positioning */
		.ticket-stub {
			flex-direction: row;
			width: 100%;
			height: 50px;
		}
		.vertical-text {
			writing-mode: horizontal-tb;
			transform: none;
			padding: 0;
		}
		.ticket-right {
			width: 100%;
			min-height: 80px;
		}
		.mega-title {
			font-size: 4rem;
		}
		.hero-footer {
			flex-direction: column;
			align-items: stretch;
			text-align: center;
		}
		.hero-footer p {
			text-align: center;
			max-width: 100%;
		}
		.btn-primary {
			width: 100%;
			text-align: center;
		}
	}

	/* CTA */
	.cta {
		padding: 6rem 1.5rem;
		background: white;
	}

	.cta-inner {
		background: var(--neon-lime);
		padding: 4rem 2rem;
		border-radius: 2rem;
		text-align: center;
		border: 4px solid var(--deep-slate);
		box-shadow: 12px 12px 0px var(--deep-slate);
	}

	.cta-inner h2 {
		font-size: clamp(3rem, 10vw, 6rem);
		font-weight: 900;
		line-height: 0.9;
		margin-bottom: 2rem;
		color: var(--deep-slate);
	}

	.btn-whatsapp {
		background: var(--deep-slate);
		color: white;
		padding: 1.25rem 2rem;
		font-size: 1.1rem;
		font-weight: 700;
		border-radius: 100px;
		display: inline-block;
		transition: all 0.2s;
		text-decoration: none;
	}

	.btn-whatsapp:hover {
		transform: scale(1.05);
		box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
	}

	/* PROBLEM SECTION */
	.problem-section {
		background: #020617; /* Very dark slate */
		color: white;
		padding: 6rem 0;
		position: relative;
	}

	.problem-title {
		font-size: clamp(3rem, 8vw, 6rem);
		line-height: 0.9;
		font-weight: 900;
		text-align: center;
		margin-bottom: 4rem;
	}

	.text-red {
		color: #ff4757; /* Warning Red */
		font-style: italic;
	}

	.problem-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.problem-card {
		background: rgba(255, 255, 255, 0.05);
		border: 2px solid #334155;
		padding: 2.5rem;
		border-radius: 1rem;
		transition: transform 0.2s;
	}

	.problem-card:hover {
		transform: translateY(-5px);
		background: rgba(255, 255, 255, 0.1);
		border-color: #ff4757;
	}

	.problem-card .icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.problem-card h3 {
		color: #ff4757;
		font-size: 1.5rem;
		font-weight: 800;
		margin-bottom: 1rem;
	}

	.problem-card p {
		color: #cbd5e1;
		font-size: 1.1rem;
		line-height: 1.5;
		margin: 0;
	}

	/* Section Divider */
	.section-divider {
		display: flex;
		justify-content: center;
		align-items: center;
		margin-bottom: 4rem;
		margin-top: -2rem;
