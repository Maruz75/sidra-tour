---
import { SEO } from 'astro-seo';

interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const { 
	title = "Astro SEO Starter",
	description = "A highly performant, SEO-friendly website template built with Astro.",
	image = "/social-image.png"
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image,
				}
			}}
		/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
