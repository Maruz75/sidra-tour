---
import { SEO } from "astro-seo";
import "@fontsource/outfit/400.css";
import "@fontsource/outfit/500.css";
import "@fontsource/outfit/600.css";
import "@fontsource/outfit/700.css";

interface Props {
	title?: string;
	description?: string;
	image?: string;
}

const {
	title = "Sidra Tour - Travel Umroh Tanpa Gimik",
	description = "Nikmati perjalanan ibadah Umroh yang khusyuk, nyaman, dan transparan bersama Sidra Tour. Travel Umroh Tanpa Gimik, fokus pada pelayanan terbaik.",
	image = "/social-image.png",
} = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			title={title}
			description={description}
			openGraph={{
				basic: {
					title: title,
					type: "website",
					image: image,
				},
			}}
		/>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-primary: #047857; /* Emerald 700 */
		--color-primary-dark: #064e3b; /* Emerald 900 */
		--color-accent: #d97706; /* Amber 600 */
		--color-text: #1f2937; /* Gray 800 */
		--color-bg: #f9fafb; /* Gray 50 */
		--color-white: #ffffff;

		--font-sans: "Outfit", sans-serif;
	}

	html {
		font-family: var(--font-sans);
		background-color: var(--color-bg);
		color: var(--color-text);
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		margin: 0;
		font-weight: 600;
		color: var(--color-primary-dark);
	}

	p {
		line-height: 1.6;
		margin-bottom: 1rem;
	}

	a {
		text-decoration: none;
		color: inherit;
		transition: all 0.2s ease;
	}

	/* Utility Classes for easy styling without Tailwind */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.btn {
		display: inline-block;
		padding: 0.75rem 1.5rem;
		border-radius: 0.5rem;
		font-weight: 600;
		text-align: center;
		cursor: pointer;
		border: none;
	}

	.btn-primary {
		background-color: var(--color-primary);
		color: var(--color-white);
	}

	.btn-primary:hover {
		background-color: var(--color-primary-dark);
		transform: translateY(-1px);
	}

	.btn-accent {
		background-color: var(--color-accent);
		color: var(--color-white);
	}

	.btn-accent:hover {
		background-color: #b45309;
		transform: translateY(-1px);
	}
</style>
